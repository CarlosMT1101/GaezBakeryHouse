<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="GaezBakeryHouse.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fluent="clr-namespace:MauiIcons.Fluent;assembly=MauiIcons.Fluent"
    xmlns:fonts="clr-namespace:GaezBakeryHouse.App.Utils"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:GaezBakeryHouse.App.Views"
    Title="AppShell"
    Shell.BackgroundColor="White"
    Shell.ForegroundColor="Black"
    Shell.NavBarHasShadow="True">

    <Shell.TitleView>
        <HorizontalStackLayout
            Padding="10"
            HorizontalOptions="End"
            Spacing="10"
            VerticalOptions="Center">
            <Image Source="{fluent:Icon Icon=Search20}" />
            <Image Source="{fluent:Icon Icon=ShoppingBag20}" />
        </HorizontalStackLayout>
    </Shell.TitleView>

    <FlyoutItem Title="Inicio">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>
</Shell>