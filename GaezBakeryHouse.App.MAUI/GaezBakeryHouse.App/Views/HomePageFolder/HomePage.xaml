<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GaezBakeryHouse.App.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:bh="clr-namespace:GaezBakeryHouse.App.Behaviors"
    xmlns:controls="clr-namespace:GaezBakeryHouse.App.Controls"
    xmlns:fluent="clr-namespace:MauiIcons.Fluent;assembly=MauiIcons.Fluent"
    xmlns:material="clr-namespace:MauiIcons.Material;assembly=MauiIcons.Material">

    <ContentPage.Behaviors>
        <bh:ContentPageBehavior />
    </ContentPage.Behaviors>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:CustomMenuBar Grid.Row="0" />
        <ScrollView Grid.Row="1" Grid.RowSpan="2" />
    </Grid>
</ContentPage>