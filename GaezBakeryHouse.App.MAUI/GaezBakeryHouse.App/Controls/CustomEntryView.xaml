    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <Frame Padding="8,0" BackgroundColor="{StaticResource GrayColor}">
            <Entry x:Name="entryView" VerticalOptions="Center" />
        </Frame>
    </Grid>
</ContentView>
