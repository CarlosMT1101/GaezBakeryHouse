<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:fonts="clr-namespace:GaezBakeryHouse.App.Fonts"
    xmlns:views="clr-namespace:GaezBakeryHouse.App.Views.HomePageFolder"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GaezBakeryHouse.App.Views.HomePage">

    <Shell.SearchHandler>
        <SearchHandler/>
    </Shell.SearchHandler>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Frame" x:Key="frmStyle">
                <Setter Property="HasShadow" Value="False"/>
                <Setter Property="BackgroundColor" Value="LightGray"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="TranslationY" Value="0"/>
                <Setter Property="Padding" Value="0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView
        VerticalScrollBarVisibility="Never"
        HorizontalScrollBarVisibility="Never">
        <Grid 
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="180"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>
            <Frame Style="{StaticResource frmStyle}"/>
            <views:CategoriesView
                Grid.Row="1"/>
        </Grid>
    </ScrollView> 

</ContentPage>