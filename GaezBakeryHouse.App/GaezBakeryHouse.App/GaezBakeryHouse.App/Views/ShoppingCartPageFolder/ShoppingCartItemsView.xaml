<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fonts="clr-namespace:GaezBakeryHouse.App.Fonts"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="GaezBakeryHouse.App.Views.ShoppingCartPageFolder.ShoppingCartItemsView">

    <RefreshView
        IsRefreshing="{Binding IsRefreshing}"
        RefreshColor="{StaticResource PrimaryColor}"
        Command="{Binding OnRefreshCommand}">
        <ScrollView
            Padding="0,0,0,10"
            HorizontalScrollBarVisibility="Never"
            VerticalScrollBarVisibility="Never">
            <StackLayout
                x:Name="stackLayout"
                Margin="10"
                Spacing="15">
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentView>