<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:views="clr-namespace:GaezBakeryHouse.App.Views.LoginFolder"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GaezBakeryHouse.App.Views.LoginPage">
    
    <ScrollView
        Style="{StaticResource BaseScrollViewStyle}">
        <Grid
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="280"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <views:LoginImageView Grid.Row="0"/>
            <views:LoginBoxView Grid.Row="1"/>
            <views:LoginFooterView Grid.Row="2"/>
        </Grid>
    </ScrollView>
</ContentPage>